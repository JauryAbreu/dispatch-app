@using dispatch_app.Models.User
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/png" href="~/lib/template/images/logos/logo-sanut.png" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden text-bg-light min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="#" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="~/lib/template/images/logos/logo-sanut.png" alt="" style="width:50%">
                                </a>
                                <form asp-controller="Security" asp-action="Login">
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Correo o Codigo de Empleado</label>
                                        <input type="text" class="form-control" id="email" asp-for="Email" aria-describedby="emailHelp" autocomplete="off">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                                        <input type="password" class="form-control" id="password" asp-for="Password" autocomplete="off">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                        <a class="text-primary fw-bold" asp-controller="Security" asp-action="ForgotPassword">Olvidaste tu Contraseña?</a>
                                    </div>
                                    @if (TempData[dispatch_app.Models.MessageEnum.Warning.ToString()] != null)
                                    {
                                    <div class="alert alert-warning" role="alert">
                                        <span>
                                            @TempData[dispatch_app.Models.MessageEnum.Warning.ToString()]
                                        </span>
                                    </div>
                                    }
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4">Entrar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/template/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/template/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>