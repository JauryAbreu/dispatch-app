@using dispatch_app.Models.User
@model RegisterModel
@{
    ViewData["Title"] = "Registrar Usuario";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/png" href="~/lib/template/images/logos/logo-sanut.png" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden text-bg-light min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="~/lib/template/images/logos/logo-sanut.png" alt="" style="width:50%">
                                </a>
                                <form asp-controller="Security" asp-action="Register">
                                    <div class="mb-3">
                                        <label for="exampleInputUserName" class="form-label">Correo o Codigo de Empleado</label>
                                        <input type="text" class="form-control" id="email" asp-for="Username" aria-describedby="usernameHelp" autocomplete="off">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Correo</label>
                                        <input type="text" class="form-control" id="email" asp-for="Email" aria-describedby="emailHelp" autocomplete="off">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                                        <input type="password" class="form-control" id="password" asp-for="Password" autocomplete="off">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="exampleInputFirstName" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" id="firstname" asp-for="FirstName" aria-describedby="firstnameHelp" autocomplete="off">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="exampleInputLastName" class="form-label">Apellido</label>
                                        <input type="text" class="form-control" id="email" asp-for="LastName" aria-describedby="lastnameHelp" autocomplete="off">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputPhone" class="form-label">Telefono</label>
                                        <input type="text" class="form-control" id="phone" asp-for="Phone" aria-describedby="phoneHelp" autocomplete="off">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="exampleInputUserGroupId" class="form-label">Telefono</label>
                                        <input type="number" class="form-control" id="userGroupId" asp-for="UserGroupId" aria-describedby="userGroupIdHelp" autocomplete="off">
                                        <span asp-validation-for="UserGroupId" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4">Registrar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/template/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/template/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>